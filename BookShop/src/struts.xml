<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
	<package name="admin" namespace="/admin" extends="struts-default">
	
		<action name="AdminAction_*" class="com.bookshop.action.AdminAction" method="{1}">
			<result name="list">/admin/products/list.jsp</result>
			<result type="redirectAction" name="del">AdminAction_execute</result>
			<result type="redirectAction" name="delAll">AdminAction_execute</result>
		</action>
		
		<action name="CheckAction" class="com.bookshop.action.AdminAction" method="check">
			<result name="check">/admin/products/list.jsp</result>
		</action>
		
		<action name="addAction_*" class="com.bookshop.action.AdminAction" method="{1}">
			<result name="addBooks">/admin/products/list.jsp</result>
		</action>
	</package>
	
</struts>
